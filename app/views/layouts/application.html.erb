<!DOCTYPE html>
<html>
<head>
  <title>Newzupp | <%= @title %></title>
  <%= stylesheet_link_tag :all %>
  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tag %>
</head>
<body>
  <div id="user_nav">  
    <% if current_user %>  
      <%= link_to "Sign Out", signout_path %>  
    <% else %>  
      <%= link_to "Sign in with Facebook", "/auth/facebook" %>  
    <% end %>
  </div>
  <% if flash[:notice] %>
    <div id="notice">
      <%= flash[:notice] %>
    </div>
  <% end %>
<%= yield %>

</body>
</html>

